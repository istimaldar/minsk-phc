<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "MINSK-PHC", root_path, :class => "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <form class="navbar-form navbar-left">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search" />
              </div>
              <button type="submit" class="btn btn-default">Apply</button>
            </form>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= image_tag(current_user.image, width: '35', heigth: '35', class: 'img-rounded') %><span class="caret"></span></a>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><div class="username"><%= current_user.username %></div></li>
                <li class="divider"></li>
                <li>
                <%= link_to(user_path(current_user)) do %>
                  <i class="fa fa-user-o" aria-hidden="true"></i> Open profile
                <% end -%>
                </li>
                <li>
                  <a href="#"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit profile</a>
                </li>
                <li class="divider"></li>
                <li>
                <%= link_to(destroy_user_session_path, :method => :delete) do %>
                  <i class="fa fa-sign-out" aria-hidden="true"></i> Sign out
                <% end -%>
                </li>
              </ul>
            </li>
        <% else %>
            <li class="networks">
            <%= link_to(user_facebook_omniauth_authorize_path) do %>
              <i class="fa fa-facebook-square" aria-hidden="true"></i>
            <% end -%>
            </li>
            <li class="networks">
            <%= link_to(user_vkontakte_omniauth_authorize_path) do %>
              <i class="fa fa-vk" aria-hidden="true"></i>
            <% end -%>
            </li>
            <li class="networks">
            <%= link_to(user_twitter_omniauth_authorize_path) do %>
              <i class="fa fa-twitter" aria-hidden="true"></i>
            <% end -%>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
